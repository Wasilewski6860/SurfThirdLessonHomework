<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SurfThirdLessonHomework" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="Theme.SurfThirdLessonHomework" parent="Base.Theme.SurfThirdLessonHomework" />

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorWindowBackground</item>
        <item name="navigationIconTint">@color/white</item>
    </style>



    <style name="BaseTextViewStyle">
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="UpcomingInfoTextViewStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/normal_text_dimansion</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">11dp</item>

    </style>

    <style name="TitleTextViewStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/title_dimension</item>
        <item name="android:textColor">@color/colorPink</item>
    </style>

    <style name="CardNameTextViewStyle" parent="BaseTextViewStyle">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">@dimen/big_text_dimension</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardTextTextViewStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/card_text_dimension</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>


    <style name="ToolbarTextViewStyle">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorColor">@null</item>

        <item name="tabTextColor">@color/colorGrey</item>
        <item name="tabSelectedTextColor">@color/colorPink</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/google_sans_regular</item>

        <item name="android:textColor">@color/colorGrey</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>